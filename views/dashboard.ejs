<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Swachhta and LiFE Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container-fluid">
    <header class="navbar navbar-dark bg-dark">
      <a href="#" class="navbar-brand" style="padding-left:3px">Swachhta & LiFE Dashboard</a>
    </header>

    <div class="row mt-3">
      <!-- Sidebar -->
      <div class="col-md-3">
        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action active">Dashboard Overview</a>
            <a href="#" class="list-group-item list-group-item-action">Swachhta Monitoring</a>
            
            <!-- Update LiFE Practices link -->
            <a href="https://igotkarmayogi.gov.in/#/contentList" class="list-group-item list-group-item-action">LiFE Practices (iGOT Portal)</a>
            
            <a href="#" class="list-group-item list-group-item-action">Alerts & Interventions</a>
          </div>
          
      </div>

      <!-- Main Content Area -->
      <div class="col-md-9">
        <!-- Alerts and Messages -->
        <div class="alert alert-warning" role="alert">
          Alert: Swachhta deviation detected at [Post Office Name]. Immediate intervention required!
        </div>

        <!-- Image Monitoring and Geolocation -->
        <h4>Image-Based Monitoring</h4>
        <div class="card">
          <div class="card-body">
            <img src="" alt="Live Feed" class="img-fluid">
            <p class="mt-2">Location: XYZ Post Office | Time: 10:30 AM, 05-Sept-2024</p>
          </div>
        </div>

        <!-- Analytics Section -->
        <h4 class="mt-4">Analytics</h4>
        <div class="row">
          <div class="col-md-6">
            <div class="card">
              <div class="card-header">Swachhta Score</div>
              <div class="card-body">
                <canvas id="swachhtaChart"></canvas>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="card">
              <div class="card-header">LiFE Practices Score</div>
              <div class="card-body">
                <canvas id="lifeChart"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Example data for the charts
    const swachhtaData = {
      labels: ['Post Office A', 'Post Office B', 'Post Office C'],
      datasets: [{
        label: 'Swachhta Score',
        data: [85, 92, 78],
        backgroundColor: ['#007bff', '#28a745', '#ffc107'],
      }]
    };

    const lifeData = {
      labels: ['Post Office A', 'Post Office B', 'Post Office C'],
      datasets: [{
        label: 'LiFE Practices Score',
        data: [70, 80, 60],
        backgroundColor: ['#007bff', '#28a745', '#ffc107'],
      }]
    };

    // Initialize Swachhta Chart
    const swachhtaCtx = document.getElementById('swachhtaChart').getContext('2d');
    new Chart(swachhtaCtx, {
      type: 'bar',
      data: swachhtaData,
      options: {
        responsive: true,
        scales: {
          y: { beginAtZero: true }
        }
      }
    });

    // Initialize LiFE Practices Chart
    const lifeCtx = document.getElementById('lifeChart').getContext('2d');
    new Chart(lifeCtx, {
      type: 'bar',
      data: lifeData,
      options: {
        responsive: true,
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  </script>
</body>
</html>
